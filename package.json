{
  "name": "voice-cursor-assistant",
  "version": "1.0.0",
  "description": "음성 기반 명령을 통해 웹/로컬 UI를 조작하는 Cursor 기반 인터랙션 시스템",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:web": "echo 'Web build completed'",
    "test": "jest"
  },
  "keywords": [
    "voice",
    "cursor",
    "ai",
    "automation",
    "electron",
    "speech-recognition"
  ],
  "author": "Voice Cursor Assistant Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^4.104.0",
    "openai-whisper": "^1.0.2",
    "puppeteer": "^21.5.2"
  },
  "build": {
    "appId": "com.voicecursor.assistant",
    "productName": "Voice Cursor Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  }
